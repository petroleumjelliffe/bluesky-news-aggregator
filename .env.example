# Bluesky News Aggregator - Environment Variables
# Copy this file to .env and fill in your values
# Environment variables override config.yaml settings

# ===========================================
# DATABASE CONFIGURATION
# ===========================================

# PostgreSQL connection settings
DB_HOST=localhost
DB_PORT=5432
DB_USER=postgres
DB_PASSWORD=your-database-password
DB_NAME=bluesky_news

# SSL mode: disable (dev), require (production)
DB_SSLMODE=disable

# ===========================================
# BLUESKY API CREDENTIALS
# ===========================================

# Your Bluesky handle (e.g., yourname.bsky.social)
BLUESKY_HANDLE=your.handle.bsky.social

# App password - generate at https://bsky.app/settings/app-passwords
# NEVER use your main account password!
BLUESKY_PASSWORD=your-app-password

# ===========================================
# SERVER CONFIGURATION
# ===========================================

# API server settings
SERVER_HOST=0.0.0.0
SERVER_PORT=8080

# TLS/HTTPS (optional - leave empty to disable)
# TLS_CERT_FILE=/path/to/cert.pem
# TLS_KEY_FILE=/path/to/key.pem

# CORS allowed origin (use specific domain in production, not *)
# CORS_ALLOW_ORIGIN=https://your-domain.com
CORS_ALLOW_ORIGIN=*

# Rate limiting (requests per minute per IP)
RATE_LIMIT_RPM=100

# ===========================================
# CLEANUP CONFIGURATION
# ===========================================

# Data retention period (hours)
CLEANUP_RETENTION_HOURS=24

# How often to run cleanup (minutes)
CLEANUP_INTERVAL_MIN=60

# Links with this many shares are kept regardless of age
CLEANUP_TRENDING_THRESHOLD=5

# How often to save cursor position (seconds)
CURSOR_UPDATE_SECONDS=10
