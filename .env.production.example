# Production Environment (Render)
# Copy to .env.production and fill in values from Render dashboard
# These are also set as environment variables in Render

# Database (from Render PostgreSQL - use Internal connection)
DB_HOST=dpg-xxxxx-a.oregon-postgres.render.com
DB_PORT=5432
DB_USER=bluesky_news_user
DB_PASSWORD=<from-render-dashboard>
DB_NAME=bluesky_news
DB_SSLMODE=require

# Bluesky credentials
BLUESKY_HANDLE=your.handle.bsky.social
BLUESKY_PASSWORD=<your-app-password>

# Server
SERVER_HOST=0.0.0.0
SERVER_PORT=8080
CORS_ALLOW_ORIGIN=https://petroleumjelliffe.github.io
RATE_LIMIT_RPM=100
